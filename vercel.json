{
  "version": 2,
  "buildCommand": "echo 'Build complete'",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs20.x",
      "maxDuration": 60
    },
    "api/cron/**/*.js": {
      "runtime": "nodejs20.x",
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/cron/calendar-sync",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/morning-notification",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/cron/evening-notification",
      "schedule": "0 22 * * *"
    }
  ],
  "env": {
    "TZ": "Asia/Manila"
  }
}
